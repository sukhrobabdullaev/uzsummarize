generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Request {
  id          String   @id @default(cuid())
  type        RequestType
  // Input fields
  content     String   // Stores text content or image URL
  language    String?  // Language of the input
  maxLength   Int?     // Maximum length for summary
  minLength   Int?     // Minimum length for summary
  // Output fields
  summary     String?  // The generated summary
  error       String?  // Any error message if request failed
  // API metadata
  status      RequestStatus @default(PENDING)
  processingTime Int?   // Time taken to process in milliseconds
  modelUsed   String?  // Which model was used for processing
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum RequestType {
  TEXT
  IMAGE
}

enum RequestStatus {
  PENDING
  COMPLETED
  FAILED
}
        